generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  email        String         @unique
  passwordHash String
  roles        String[]       @default(["user"])
  name         String?
  phone        String?
  status       String         @default("ACTIVE")
  preferences  Json?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  refreshTokens RefreshToken[]
  addresses    Address[]
  reviews      Review[]
}

model RefreshToken {
  id        String   @id @default(uuid())
  tokenHash String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

model Product {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  price       Decimal   @db.Decimal(10, 2)
  description String
  stock       Int       @default(0)
  active      Boolean   @default(true)
  images      String[]
  categoryId  Int
  category    Category  @relation(fields: [categoryId], references: [id]) 
  inventory   InventoryItem?
  movements   StockMovement[]
  reviews     Review[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
}

model Category {
  id          Int        @id @default(autoincrement())
  title       String
  slug        String     @unique
  image       String
  description String?
  active      Boolean    @default(true)
  sortOrder   Int        @default(0)
  deletedAt   DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  products    Product[]
}

model Order {
  id          String   @id
  userId      String
  status      String   @default("PENDING")
  items       Json
  totalAmount Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  payments    Payment[]
}

model Payment {
  id               String   @id @default(uuid())
  orderId          String
  order            Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  userId           String
  amount           Decimal  @db.Decimal(10, 2)
  status           String
  externalPaymentId String?
  clientSecret     String?
  provider         String   @default("FAKE")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([orderId])
  @@index([userId])
}

model Cart {
  id     String @id
  userId String @unique
  items  Json
}

model Address {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  street    String
  city      String
  country   String
  zipCode   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model InventoryItem {
  id        String          @id @default(uuid())
  productId Int             @unique
  product   Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  onHand    Int             @default(0)
  reserved  Int             @default(0)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  movements StockMovement[]
}

model StockMovement {
  id             String        @id @default(uuid())
  inventoryItemId String
  productId       Int
  inventoryItem   InventoryItem @relation(fields: [inventoryItemId], references: [id], onDelete: Cascade)
  product         Product       @relation(fields: [productId], references: [id], onDelete: Cascade)
  type            String
  reason          String
  quantity        Int
  onHandAfter     Int
  reservedAfter   Int
  createdAt       DateTime     @default(now())

  @@index([productId])
  @@index([inventoryItemId])
}

model Review {
  id        String   @id @default(uuid())
  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating    Int
  comment   String
  createdAt DateTime @default(now())

  @@index([productId])
  @@index([userId])
  @@unique([productId, userId])
}
