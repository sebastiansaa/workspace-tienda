# Example environment variables for tienda-lite (production-ready defaults)

NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/tienda-lite?schema=public"

# Auth / JWT
AUTH_JWT_SECRET="replace_with_a_secure_random_string"
AUTH_ACCESS_TOKEN_TTL=15m
AUTH_REFRESH_TOKEN_TTL=7d

# CORS
# Comma-separated origins, use * to allow all (no credentials)
CORS_ORIGINS=*

# Stripe or other PSP keys (optional)
STRIPE_SECRET=sk_test_replace

# Seed helpers (optional)
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=Admin123!
